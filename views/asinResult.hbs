<form method="POST" action="/search/prID">
  <label for="asin">Product Id</label>
  <input type="text" name="asin" placeholder="Enter product ID" />
  <br /><br />
  <input type="Submit" name="Search" />
</form>
{{#if ProductId}}
    <table border="1" class="dataTable">
        <tr>
            <th>asin</th>
            <th>Title</th>
            <th>Image</th>
            <th>Stars</th>
            <th>Reviews</th>
            <th>Price</th>
            <th>List Price</th>
            <th>Category Name</th>
            <th>Is Best Seller</th>
            <th>Last Month Sale</th>
        </tr>
    {{#each Json}}
           {{#if (matchID ../ProductId this.asin)}}
                <tr>
                    <td>{{this.asin}}</td>
                    <td>{{this.title}}</td>
                    <td>
                    <img src={{this.imgUrl}} alt="" />
                    </td>
                    <td>{{this.stars}}</td>
                    <td>{{this.reviews}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.listPrice}}</td>
                    <td>{{this.categoryName}}</td>
                    <td>{{this.isBestSeller}}</td>
                    <td>{{this.boughtInLastMonth}}</td>
                </tr>
            {{/if}}
    {{/each}}
{{else}}
    <h5 class="error">ERROR! Product ID should not be empty</h5>
{{/if}}
</table>